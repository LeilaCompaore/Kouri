{% extends "_base.njk" %}

{% block content %}
    <div class="ui grid centered three column">
        <div class="column">
            <div class="ui middle aligned center aligned grid">
                <div class="column">
                    <h2 class="ui teal image header">
                        <img src="assets/images/logo.png" class="image">
                        <div class="content">
                            Log-in to your account
                        </div>
                    </h2>
                    <form class="ui large form">
                        <div class="ui segment grid two column">
                            <div class="field column">
                                <div class="ui icon">
                                    <div class="ui transparent input">
                                        <i class="user icon"></i>
                                        <input type="text" name="nom" placeholder="Nom">
                                    </div>
                                </div>
                            </div>
                            <div class="field column">
                                <div class="ui icon">
                                    <div class="ui transparent input">
                                        <i class="lock icon"></i>
                                        <input type="text" name="prenom" placeholder="Prenom">
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="field column">
                                    <div class="ui icon">
                                        <div class="ui transparent input">
                                            <i class="user icon"></i>
                                            <input type="text" name="email" placeholder="Addresse courielle">
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="field column">
                                <div class="ui icon">
                                    <div class="ui transparent input">
                                        <i class="lock icon"></i>
                                        <input type="date" name="datenaissance" placeholder="Date de naissance">
                                    </div>
                                </div>
                            </div>
                            <div class="field column">
                                <div class="ui radio checkbox">
                                    <input type="radio" name="genre" value="femme">
                                    <label>Femme</label>
                                </div>&nbsp;
                                <div class="ui radio checkbox">
                                    <input type="radio" name="genre" value="homme">
                                    <label>Homme</label>
                                </div>
                            </div>
                            <button class="ui fluid large teal button" type="submit">Login</button>
                        </div>
                    </form>

                    <div class="ui message">
                        New to us? <a href="#">Sign Up</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
